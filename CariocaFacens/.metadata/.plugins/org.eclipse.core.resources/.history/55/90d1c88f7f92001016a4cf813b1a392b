package com.joao.estruturaDeDados.application;

import com.joao.estruturaDeDados.entities.StackAsArray;

public class ProgarmaStack {

	public static void main(String[] args) {
		String palavra = "ARARA";
		StackAsArray pilha = new StackAsArray(palavra.length());
		
		for (int i = 0; i < palavra.length(); i++) {
			pilha.push(palavra.charAt(i)); // empilhar 
		}
		 StringBuilder invertida = new StringBuilder();
		 while(pilha.getCount() > 0) {
			 invertida.append(pilha.pop());
		 }
		 System.out.println("PALAVRA INVERTIDA: " + invertida.toString());
	}

}
