package entities;

public class Pilha {
	private int[] object;
	private int topo; // controlar o Ã­ndice do topo da pilha
	//private int tamanho;
	
	public Pilha(int tamanho) {
		topo = -1; // 
		
	}

	public int[] getObject() {
		return object;
	}

	public void setObject(int[] object) {
		this.object = object;
	}

	public int getTopo() {
		return topo;
	}

	public void setTopo(int topo) {
		this.topo = topo;
	}
	public void empilhar(int valor) {
		topo++;
		object[topo] = valor;

	}
	public void desempilhar() {
		topo --;
	}
	public int retornarElementoTopoPilha() {
		return object[topo];
	}
	public void imprimirPilha() {
		for(int i = 0;i<=topo;i++) {
			System.out.println(" " + object[i]);
		}
	}
}
