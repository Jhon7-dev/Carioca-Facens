package entities;

public class Pilha {
	private String [] object;
	private int topo; // controlar o índice do topo da pilha
	//private int tamanho;
	
	public Pilha(int tamanho) {
		topo = -1; // 
		object = new String[tamanho];
	}

	public String[] getObject() {
		return object;
	}

	public void setObject(String[] object) {
		this.object = object;
	}

	public int getTopo() {
		return topo;
	}

	public void setTopo(int topo) {
		this.topo = topo;
	}
	public void empilhar(String valor) {
		if(!verificarPilhaCheia()) {
			topo++;
			object[topo] = valor;
		}else {
			System.out.println("Pilha cheia!");
		}
	}
	
	public void desempilhar() {
		if(!verificaPilhaVazia()) {
			topo --;
		}else {
			System.out.println("Pilha vazia!");
		}
	}
	public String retornarElementoTopoPilha() {
		if(!verificaPilhaVazia()) {
			return object[topo];
		}
		System.out.println("Pilha vazia, não há topo!");
		return null;
	}
	public void imprimirPilha(String valor) {
		if(!verificarPilhaCheia()) {
			topo++;
			object[topo] = valor;
			 System.out.println(valor + "Empilhado com sucesso!");
		}else {
			System.out.println("Pilha cheia!");
			//for(int i = 0;i<=topo;i++) {
				//System.out.println(" " + object[i]);
		}
		
		}
	}
	public boolean verificaPilhaVazia() {
		if(topo == -1) {
			System.out.println("Pilha vazia");
			return   false;
		}
		return true;
	}
	public boolean verificarPilhaCheia() {
		if(topo == object.length-1) {
			System.out.println("Pilha cheia!");
			return false;
		}
		return true;
	}
}
